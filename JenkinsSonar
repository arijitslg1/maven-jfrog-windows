pipeline {
	agent any	
		stages
			{
			stage ('SCM Checkout')
					{	
						git 'https://github.com/arijitslg1/maven-project.git'
					}
			}
			{
			stage ('Testing Stage') 
					{	
						steps 	{
								withMaven(maven : 'LocalMaven') 
									{		
										sh 'mvn test'
									}				
								}		
				}							
			}
		{
			stage ('Build && SonarQube Analysis') 
					{	
						steps 	{
             						 withSonarQubeEnv('sonar'){
								withMaven(maven : 'LocalMaven') 
									{		
										sh 'mvn clean package sonar:sonar'
									}				
								}		
            				}	
         			 }
     		 }
			{
			stage ('Testing Installation') 
					{	
						steps 	{
								withMaven(maven : 'LocalMaven') 
									{		
										sh 'mvn install'
									}				
								}		
					}							
			}
			}
